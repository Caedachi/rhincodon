{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "lib": ["es2020"],
        "sourceMap": true,
        "types": [
            "node",
            "reflect-metadata",
            "mocha"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ]
}